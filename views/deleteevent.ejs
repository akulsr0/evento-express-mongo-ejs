<html>
  <head>
    <title>Evento: Delete Event</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <center>
        <h1 class="titleText">Evento</h1>
        <div class="menuDiv">
          <a href="/" class="menuItem">Home</a>
          <a href="/events" class="menuItem">Events</a>
          <a href="/about-us" class="menuItem">About Us</a>
          <a href="/contact-us" class="menuItem">Contact Us</a>
          <hr size="1" width="60%" style="margin-top: 10px;" />
        </div>
      </center>
    </header>
    <center>
      <div class="upEventsTitleDiv">
        <h3 class="opensans" style="font-weight: 700;">Delete Event</h3>
      </div>
    </center>
    <div class="deleteListDiv">
      <% eventsResult.map(event => { %>
      <ul class="deleteList">
        <form method="POST" action="/events/delete/<%=event.id%>">
            <li class="deleteListItem" key=<%= event.id %> >
                <%=event.name%>
                <button>Delete</button>
              </li>
        </form>
      </ul>
      <% }) %>
    </div>
  </body>
  <script></script>
</html>
